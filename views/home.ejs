    	<ol>
            <% for (var i of foundItems) { %>
            <li><ul>
            <li>id: <%= i._id %></li>
            <li>name: <%= i.name %></li>
            <li>category: <%= i.category %></li>
            <li>desc: <%= i.description %></li>
            </ul></li>
            <% } %>
        </ol>
    </div>
</body>
</html>
